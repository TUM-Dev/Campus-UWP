<Application x:Class="UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="using:Microsoft.UI.Xaml.Controls">

    <Application.Resources>
        <controls:XamlControlsResources>
            <controls:XamlControlsResources.MergedDictionaries>
                <!--  Fonts:  -->
                <ResourceDictionary Source="ms-appx:///Resources/Fonts.xaml"/>

                <!--  Brushes:  -->
                <ResourceDictionary Source="ms-appx:///Resources/Brushes.xaml"/>

                <!--  Styles:  -->
                <ResourceDictionary Source="ms-appx:///Resources/Styles/GeneralStyles.xaml"/>

                <!--  Value Converters:  -->
                <ResourceDictionary Source="ms-appx:///Resources/ValueConverter.xaml"/>

                <!--  Controls:  -->
            </controls:XamlControlsResources.MergedDictionaries>
        </controls:XamlControlsResources>
    </Application.Resources>
</Application>
